<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.freshwind.smarthome.FancyDialogBackground
        android:id="@+id/fancyDialogBackground"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:backgroundColor="@color/redAccent_100"
        app:strokeColor="@color/redAccent_500"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/connectErrorTitle"
        android:layout_width="189dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="@string/connect_err_title"
        android:textAlignment="center"
        android:textColor="@color/redAccent_900"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/fancyDialogBackground"
        app:layout_constraintStart_toStartOf="@+id/fancyDialogBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connectErrDescription"
        android:layout_width="186dp"
        android:layout_height="87dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/connect_err_description"
        android:textColor="@color/redAccent_700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/fancyDialogBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectErrorTitle" />

</android.support.constraint.ConstraintLayout>